<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - inmobiliariaULP</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/inmobiliariaULP.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/adminSidebar.css" asp-append-version="true" />
    
</head>
<body>
    @{
        var tipo = TempData["NotificacionTipo"] as string ?? "primary";
        @* 
            "success" → verde
            "danger" → rojo
            "warning" → amarillo
            "info" → azul claro
            "primary" → azul (por defecto)
        *@
    }
    @if (TempData["Notificacion"] != null)
    {
        <div aria-live="polite" aria-atomic="true" class="position-fixed end-0 p-3" style="z-index: 1080; top: 70px; right: 10px; min-width: 300px;">
            <div id="toastNotificacion" class="toast show align-items-center text-bg-@tipo border-0 animate-toast-in" role="alert">
                <div class="d-flex">
                    <div class="toast-body fs-4">
                        @TempData["Notificacion"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary mb-3 shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">inmobiliariaULP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                    </ul>

                    <div class="d-flex align-items-center me-3">
						<div class="dropdown">
							<a href="#" class="d-flex align-items-center link-light text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="~/images/avatar.jpg" alt="Perfil" width="36" height="36" class="rounded-circle object-fit-cover me-2">
								<span class="d-none d-sm-inline">Mi cuenta</span>
							</a>
							<ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="dropdownUser">
								<li><a class="dropdown-item" asp-area="" asp-controller="Persona" asp-action="Edit">Editar perfil</a></li>
								<li><a class="dropdown-item" href="#">Configuración</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
							</ul>
						</div>
					</div>

                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal con scrolls independientes -->
    <div class="admin-layout-container">
        <div class="admin-layout-wrapper">
            <!-- Sidebar con scroll propio -->
	        <aside class="admin-sidebar bg-light border-end">
                <div class="admin-sidebar-header">
                    <div class="d-flex align-items-center mb-3">
				        <i class="bi bi-speedometer2 me-2 text-primary"></i>
				        <span class="fw-semibold text-secondary">Panel de administración</span>
			        </div>
                </div>
                
                <div class="admin-sidebar-content">
                    <div class="accordion accordion-flush" id="adminAccordion">
                        <!-- Módulo: Usuarios -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingUsers">
						        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUsers" aria-expanded="false" aria-controls="collapseUsers">
							        <i class="bi bi-people me-2 text-primary"></i> Usuarios
						        </button>
					        </h2>
                            
                            <div id="collapseUsers" class="accordion-collapse collapse" aria-labelledby="headingUsers" data-bs-parent="#adminAccordion">
						        <div class="accordion-body p-0">
							        <ul class="list-group list-group-flush admin-submenu">
								        <li class="list-group-item">
                                            <a class="nav-link admin-link" asp-area="" asp-controller="Persona" asp-action="Index">Personas</a>
								        </li>
								        <li class="list-group-item">
									        <a class="nav-link admin-link" asp-area="" asp-controller="Inquilino" asp-action="Index">Inquilinos</a>
								        </li>
								        <li class="list-group-item">
								        	<a class="nav-link admin-link" asp-area="" asp-controller="Propietario" asp-action="Index">Propietarios</a>
								        </li>
							        </ul>
						        </div>
					        </div>
                        </div><!-- Módulo: Usuarios -->

                        <!-- Módulo: Propiedades -->
                        <div class="accordion-item">
					        <h2 class="accordion-header" id="headingProps">
						        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProps" aria-expanded="false"        aria-controls="collapseProps">
						        	<i class="bi bi-house-door me-2 text-primary"></i> Propiedades
						        </button>
					        </h2>

					        <div id="collapseProps" class="accordion-collapse collapse" aria-labelledby="headingProps" data-bs-parent="#adminAccordion">
					        	<div class="accordion-body p-0">
					        		<ul class="list-group list-group-flush admin-submenu">
					        			<li class="list-group-item">
					        				<a href="/Admin/Propiedades" class="admin-link">Listado</a>
					        			</li>
					        			<li class="list-group-item">
					        				<a href="/Admin/Propiedades/Crear" class="admin-link">Crear</a>
					        			</li>
					        			<li class="list-group-item">
					        				<a href="/Admin/Propiedades/Tipos" class="admin-link">Tipos</a>
					        			</li>
					        		</ul>
					        	</div>
					        </div>
                        </div><!-- Módulo: Propiedades -->

                        <!-- Módulo: Contratos -->
                        <div class="accordion-item">
					        <h2 class="accordion-header" id="headingContracts">
						        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseContracts" aria-expanded="false" aria-controls="collapseContracts">
						        	<i class="bi bi-file-earmark-text me-2 text-primary"></i> Contratos
						        </button>
					        </h2>

					        <div id="collapseContracts" class="accordion-collapse collapse" aria-labelledby="headingContracts" data-bs-parent="#adminAccordion">
					        	<div class="accordion-body p-0">
					        		<ul class="list-group list-group-flush admin-submenu">
					        			<li class="list-group-item">
					        				<a href="/Admin/Contratos" class="admin-link">Listado</a>
					        			</li>
					        			<li class="list-group-item">
					        				<a href="/Admin/Contratos/Crear" class="admin-link">Crear</a>
					        			</li>
					        			<li class="list-group-item">
					        				<a href="/Admin/Contratos/Vencimientos" class="admin-link">Vencimientos</a>
					        			</li>
					        		</ul>
					        	</div>
					        </div>
                        </div><!-- Módulo: Contratos -->

                        <!-- Módulo: Reportes -->
                        <div class="accordion-item">
					        <h2 class="accordion-header" id="headingReports">
						        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseReports" aria-expanded="false" aria-controls="collapseReports">
						        	<i class="bi bi-graph-up me-2 text-primary"></i> Reportes
						        </button>
					        </h2>

					        <div id="collapseReports" class="accordion-collapse collapse" aria-labelledby="headingReports" data-bs-parent="#adminAccordion">
					        	<div class="accordion-body p-0">
					        		<ul class="list-group list-group-flush admin-submenu">
					        			<li class="list-group-item">
					        				<a href="/Admin/Reportes/Ventas" class="admin-link">Ventas</a>
					        			</li>
					        			<li class="list-group-item">
					        				<a href="/Admin/Reportes/Alquileres" class="admin-link">Alquileres</a>
					        			</li>
					        			<li class="list-group-item">
					        				<a href="/Admin/Reportes/Financiero" class="admin-link">Financiero</a>
					        			</li>
					        		</ul>
					        	</div>
					        </div>
                        </div><!-- Módulo: Reportes -->

                    </div>
                </div>
            </aside>

            <!-- Contenido principal con scroll propio -->
	        <div class="admin-content">
		        <main role="main" class="admin-main-content">
                    @RenderBody()
                </main>
	        </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - inmobiliariaULP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>