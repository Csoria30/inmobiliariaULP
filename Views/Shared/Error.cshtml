@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger shadow-sm rounded-3 p-4">
        <h3 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i> Ocurrió un error
        </h3>
        <p class="mb-3">
            @TempData["Error"] ?? "Ha ocurrido un error inesperado. Intente nuevamente más tarde."
        </p>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
            <i class="bi bi-house-door me-2"></i> Volver al inicio
        </a>
    </div>
</div>
