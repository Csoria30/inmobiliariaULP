@model IEnumerable<Persona>

@{
    ViewData["Title"] = "Personas";

    var page = ViewBag.Page ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var total = ViewBag.Total ?? 0;
    var totalPages = (int)Math.Ceiling((double)total / pageSize);
}

<div class="container-fluid px-4 py-5">
    <!-- Header con título y botón de crear -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold text-primary mb-0">
                <i class="bi bi-people-fill me-2"></i>Gestión de Personas - Administrador
            </h1>
            <p class="text-muted mb-0">Administra la información de todas las personas</p>
        </div>
        <div class="col-auto">
            <a class="btn btn-primary" asp-controller="Persona" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i> Nueva Persona
            </a>

        </div>
    </div>

    <!-- Tabla Personas -->
    <div class="card-body p-0">

        <table class="table table-striped table-bordered" id="personasTable">
            <thead class="table-light">
                <tr>
                    <th class="border-0">
                        <i class="bi bi-card-text me-1"></i>DNI
                    </th>
                    <th class="border-0">
                        <i class="bi bi-person me-1"></i>Apellido
                    </th>
                    <th class="border-0">
                        <i class="bi bi-person me-1"></i>Nombre
                    </th>
                    <th class="border-0">
                        <i class="bi bi-telephone me-1"></i>Teléfono
                    </th>
                    <th class="border-0">
                        <i class="bi bi-person-circle"></i> Perfil
                    </th>
                    <th class="border-0">
                        <i class="bi bi-person-circle"></i> Estado
                    </th>

                    <th class="border-0 text-center" style="width: 200px;">
                        <i class="bi bi-gear me-1"></i>Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
            
            </tbody>
        </table>

    </div>

@* Modal de eliminacion de Persona *@
    <div class="modal fade" id="modalEliminarPersona" tabindex="-1" aria-labelledby="modalEliminarPersonaLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div id="modalHeaderEstado" class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalEliminarPersonaLabel">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <span id="modalTituloEstado">Confirmar acción</span>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p id="modalMensajeEstado">
                        ¿Está seguro que desea <span id="accionPersonaEstado">deshabilitar</span> a <span
                            class="fw-bold" id="nombrePersonaEliminar"></span>?
                    </p>
                </div>
                <div class="modal-footer">
                    <form id="formEliminarPersona" method="post">
                        <input type="hidden" name="id" id="personaIdEliminar" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" id="btnConfirmarEstado" class="btn btn-danger">Deshabilitar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<script src="~/js/modal-EliminarPersona.js"></script>