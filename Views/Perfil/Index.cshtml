@model inmobiliariaULP.Models.ViewModels.PerfilViewModel

@{
    var tipoPersona = "Perfil";
    ViewData["Title"] = $"{tipoPersona}";
}

<div class="container-fluid px-4 py-5">

    <!-- Header con título -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold text-success mb-0">
                <i class="bi bi-person-circle me-2"></i>Mi @tipoPersona
            </h1>
            <p class="text-muted mb-0">Administra la información de tu @tipoPersona</p>
        </div>
        <div class="col-auto">
            <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home">
                <i class="bi bi-arrow-left me-2"></i>Volver al inicio
            </a>
        </div>
    </div>

    <!-- Mensajes de notificación -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-success shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-gear me-2"></i>Configuración de Perfil
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Formulario de datos personales -->
                        <div class="col-md-6 border-end">
                            <form asp-action="ActualizarDatos" asp-controller="Perfil" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                                <h5 class="mb-4 text-success"><i class="bi bi-person me-2"></i>Datos personales</h5>
                                <div class="mb-3">
                                    <label asp-for="DatosPersonalesDTO.Apellido" class="form-label"></label>
                                    <input asp-for="DatosPersonalesDTO.Apellido" class="form-control" required />
                                    <span asp-validation-for="DatosPersonalesDTO.Apellido" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="DatosPersonalesDTO.Nombre" class="form-label"></label>
                                    <input asp-for="DatosPersonalesDTO.Nombre" class="form-control" required />
                                    <span asp-validation-for="DatosPersonalesDTO.Nombre" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="DatosPersonalesDTO.Telefono" class="form-label"></label>
                                    <input asp-for="DatosPersonalesDTO.Telefono" class="form-control" required />
                                    <span asp-validation-for="DatosPersonalesDTO.Telefono" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="DatosPersonalesDTO.Email" class="form-label"></label>
                                    <input asp-for="DatosPersonalesDTO.Email" class="form-control" type="email" required readonly="readonly"/>
                                    <span asp-validation-for="DatosPersonalesDTO.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3 text-center">
                                    <img 
                                        src="~/images/@(User.FindFirst("Avatar")?.Value ?? "default-avatar.png")" 
                                        alt="Perfil" 
                                        width="150" 
                                        height="150"
                                        class="rounded-circle object-fit-cover me-2 border border-success border-3">
                                    <div>
                                        <label asp-for="DatosPersonalesDTO.AvatarFile" class="form-label">Actualizar imagen de perfil</label>
                                        <input type="file" asp-for="DatosPersonalesDTO.AvatarFile" class="form-control" accept="image/*" />
                                        <span asp-validation-for="DatosPersonalesDTO.AvatarFile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end mt-4">
                                    <button type="submit" class="btn btn-success me-2">
                                        <i class="bi bi-save me-1"></i> Guardar Cambios
                                    </button>
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                                    </a>
                                </div>
                            </form>
                        </div>
                        <!-- Formulario de cambio de contraseña -->
                        <div class="col-md-6">
                            <form asp-action="CambiarPassword" asp-controller="Perfil" method="post">
                                <h5 class="mb-4 text-success"><i class="bi bi-key me-2"></i>Cambiar contraseña</h5>
                                <div class="mb-3">
                                    <label for="PasswordActual" class="form-label">Contraseña actual</label>
                                    <input type="password" asp-for="CambiarPasswordDTO.PasswordActual" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label for="PasswordNueva" class="form-label">Nueva contraseña</label>
                                    <input type="password" asp-for="CambiarPasswordDTO.PasswordNueva" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label for="PasswordConfirmar" class="form-label">Repetir nueva contraseña</label>
                                    <input type="password" asp-for="CambiarPasswordDTO.PasswordConfirmar" class="form-control" required />
                                </div>
                                <div class="d-flex justify-content-end mt-4">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-shield-lock me-1"></i> Cambiar Contraseña
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>