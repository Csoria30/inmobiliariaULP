@model IEnumerable<Contrato>

@{
    var tipoPersona = "Contratos";
    ViewData["Title"] = $"{tipoPersona}";
}

<div class="container-fluid px-4 py-5">
    
    <!-- Header con título y botón de crear -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold text-primary mb-0">
                <i class="bi bi-people-fill me-2"></i>Gestión de @tipoPersona
            </h1>
            <p class="text-muted mb-0">Administra la información de los @tipoPersona</p>
        </div>
        <div class="col-auto">
            <a class="btn btn-primary" asp-controller="Contrato" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i> Nuevo Contrato
            </a>
        </div>
    </div>

    <!-- Tabla Empleados -->
    <div class="card-body p-0">
        <table class="table table-striped table-bordered" id="contratosTable">
            <thead class="table-light">
                <tr>
                    <th class="border-0">ID</th>
                    <th class="border-0">Dirección</th>
                    <th class="border-0">Tipo</th>
                    <th class="border-0">Propietario</th>
                    <th class="border-0">Inquilino</th>
                    <th class="border-0">Inicio</th>
                    <th class="border-0">Fin</th>
                    <th class="border-0">Monto</th>
                    <th class="border-0">Estado</th>
                    <th class="border-0">Pagos</th>
                    <th class="border-0 text-center" style="width: 200px;">Acciones</th>
                </tr>
            </thead>
            
            <tbody>
            
            </tbody>

        </table>
    </div>

    <!-- ...existing code... -->
    <div class="informacion-tabla mt-5 d-flex flex-column align-items-start">
        <div class="mb-2">
            <span class="badge bg-success me-2">Habilitado</span>
            <span class="text-muted">Usuario activo en el sistema</span>
        </div>
        <div>
            <span class="badge bg-danger me-2">Deshabilitado</span>
            <span class="text-muted">Usuario que estuvo activo pero actualmente está dado de baja</span>
        </div>
    </div>
    <!-- ...existing code... -->

</div>

