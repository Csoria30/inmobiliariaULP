@model inmobiliariaULP.Models.ViewModels.UsuarioLoginDTO
@{
    Layout = null;
    ViewData["Title"] = "Iniciar sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - inmobiliariaULP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <i class="bi bi-house-door-fill login-logo"></i>
            <h4 class="fw-bold mb-0 brand-container">inmobiliariaULP</h4>
            <small class="text-muted">Panel de acceso</small>
        </div>

        @* Mostrar mensaje de error personalizado *@
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.Error
            </div>
        }

        <form asp-action="Login" asp-controller="Auth" autocomplete="off">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="bi bi-envelope me-2"></i>Correo electrónico
                </label>
                <input asp-for="Email" class="form-control" placeholder="usuario@ejemplo.com" />
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="form-label">
                    <i class="bi bi-key me-2"></i>Contraseña
                </label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Ingresar
                </button>
            </div>
        </form>
        
        <div class="text-center security-footer">
            <small class="text-muted">
                <i class="bi bi-shield-check me-1"></i>
                Acceso seguro y protegido
            </small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>