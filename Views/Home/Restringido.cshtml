@{
    Layout = null;
    ViewData["Title"] = "Acceso Denegado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - inmobiliariaULP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #4e54c8 0%, #8f94fb 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .denied-card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 4px 32px rgba(0,0,0,0.08);
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        .denied-icon {
            font-size: 3rem;
            color: #dc3545;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="denied-card">
        <div class="denied-icon">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        <h2 class="fw-bold mb-3 text-danger">Acceso Denegado</h2>
        <p class="mb-4 text-secondary">
            No tienes permisos para acceder a esta secci√≥n.<br />
            Si crees que esto es un error, contacta al administrador.
        </p>
        <a href="javascript:history.back()" class="btn btn-outline-primary me-2">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Ir al inicio
        </a>
    </div>
</body>
</html>